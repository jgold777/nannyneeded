<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>
<<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Number of children</th>
      <th>Days needed</th>
      <th>Times needed</th>
      <th>City</th>
      <th>State</th>
      <th>Hourly pay</th>
      <th>Is cpr certified</th>
      <th>Have pets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user_id %></td>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.number_of_children %></td>
        <td><%= job.days_needed %></td>
        <td><%= job.times_needed %></td>
        <td><%= job.city %></td>
        <td><%= job.state %></td>
        <td><%= job.hourly_pay %></td>
        <td><%= job.is_cpr_certified %></td>
        <td><%= job.have_pets %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

