<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :number_of_children %>
    <%= f.input :days_needed %>
    <%= f.input :times_needed %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :hourly_pay %>
    <%= f.input :is_cpr_certified %>
    <%= f.input :have_pets %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
